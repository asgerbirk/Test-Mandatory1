{
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "warn",                // Warns about variables that are declared but not used
      "@typescript-eslint/no-unused-vars": "warn", // Same as above but for TypeScript
      "no-console": "off",                     // Allows console.log (can be changed to "warn" or "error" to block)
      "prettier/prettier": ["error", {         // Prettier configuration for code formatting
        "endOfLine": "auto",
        "singleQuote": true,
        "semi": true
      }]
    }
  }
  